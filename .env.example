# ==============================================================================
# Episciences Journal Configuration Example
# ==============================================================================
# This file contains journal-specific configuration variables.
# Common constants (ORCID, DOI, HAL, etc.) are defined in .env at the root.
#
# To use this file:
# 1. Copy it to external-assets/.env.local.<journal-code>
# 2. Update values to match your journal's configuration
# ==============================================================================

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Backend API endpoint (includes /api suffix)
NEXT_PUBLIC_API_ROOT_ENDPOINT="https://api-preprod.episciences.org/api"

# ==============================================================================
# ISR & CACHE REVALIDATION
# ==============================================================================
# Secret token for on-demand revalidation API (/api/revalidate)
# Generate a strong random token: openssl rand -base64 32
# This allows the backend to trigger cache invalidation when content changes
REVALIDATION_SECRET="your-secret-token-here"

# Multi-server deployment: comma-separated list of peer server URLs
# When set, revalidation requests are broadcast to all peer servers
# Each server should list ALL other servers (not itself)
# Leave empty for single-server deployments
# Example for VM1: PEER_SERVERS="http://vm2:3000,http://vm3:3000,http://vm4:3000"
PEER_SERVERS=""

# ==============================================================================
# COAR NOTIFY
# ==============================================================================
# COAR Notify inbox URL for notifications
NEXT_PUBLIC_COAR_NOTIFY_INBOX_URL="https://inbox-preprod.episciences.org/"

# ==============================================================================
# JOURNAL IDENTITY & BRANDING
# ==============================================================================
# Journal code (must match the journal identifier in the system)
NEXT_PUBLIC_JOURNAL_RVCODE="epijinfo"

# Primary color used in the journal theme
NEXT_PUBLIC_JOURNAL_PRIMARY_COLOR="#49737e"

# Text color to use on primary color background
NEXT_PUBLIC_JOURNAL_PRIMARY_TEXT_COLOR="#ffffff"

# Comma-separated list of accepted languages (e.g., "en,fr", "en,fr,es" or "en" for monolingual)
NEXT_PUBLIC_JOURNAL_ACCEPTED_LANGUAGES="en,fr"

# Default language (must be one of the accepted languages)
NEXT_PUBLIC_JOURNAL_DEFAULT_LANGUAGE="en"

# ==============================================================================
# JOURNAL HOMEPAGE CONFIGURATION
# ==============================================================================
# Control visibility of homepage sections
NEXT_PUBLIC_JOURNAL_HOMEPAGE_LATEST_ARTICLES_CAROUSEL_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_LATEST_NEWS_CAROUSEL_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_MEMBERS_CAROUSEL_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_STATS_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_JOURNAL_INDEXATION_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_SPECIAL_ISSUES_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_LATEST_ACCEPTED_ARTICLES_CAROUSEL_RENDER=true
NEXT_PUBLIC_JOURNAL_HOMEPAGE_LAST_NEWS_RENDER=true

# Homepage information block type (displayed at the right of the journal about text)
# Possible values: "last-news" | "last-volume" | "last-special-issue"
NEXT_PUBLIC_JOURNAL_HOMEPAGE_LAST_INFORMATION_RENDER_TYPE="last-news"

# ==============================================================================
# JOURNAL MENU CONFIGURATION
# ==============================================================================
# Control visibility of menu items
NEXT_PUBLIC_JOURNAL_MENU_ACCEPTED_ARTICLES_RENDER=true
NEXT_PUBLIC_JOURNAL_MENU_VOLUME_TYPE_PROCEEDINGS_RENDER=true

# ==============================================================================
# JOURNAL STATISTICS CONFIGURATION
# ==============================================================================
# Chart colors (used in statistics page graphs)
NEXT_PUBLIC_JOURNAL_STATISTICS_COLORS_0="#840909"
NEXT_PUBLIC_JOURNAL_STATISTICS_COLORS_1="#295fba"
NEXT_PUBLIC_JOURNAL_STATISTICS_COLORS_2="#3f557a"
NEXT_PUBLIC_JOURNAL_STATISTICS_COLORS_3="#192132"

# Statistics sections visibility
NEXT_PUBLIC_JOURNAL_STATISTICS_ACCEPTANCE_RATE_RENDER=true
NEXT_PUBLIC_JOURNAL_STATISTICS_NB_SUBMISSIONS_RENDER=true
NEXT_PUBLIC_JOURNAL_STATISTICS_NB_SUBMISSIONS_DETAILS_RENDER=true
NEXT_PUBLIC_JOURNAL_STATISTICS_REVIEWS_REQUESTED_RENDER=true
NEXT_PUBLIC_JOURNAL_STATISTICS_REVIEWS_RECEIVED_RENDER=true
NEXT_PUBLIC_JOURNAL_STATISTICS_MEDIAN_SUBMISSION_PUBLICATION_RENDER=true
NEXT_PUBLIC_JOURNAL_STATISTICS_MEDIAN_REVIEWS_NUMBER_RENDER=true

# Statistics sections display order
NEXT_PUBLIC_JOURNAL_STATISTICS_ACCEPTANCE_RATE_ORDER=10
NEXT_PUBLIC_JOURNAL_STATISTICS_NB_SUBMISSIONS_ORDER=2
NEXT_PUBLIC_JOURNAL_STATISTICS_NB_SUBMISSIONS_DETAILS_ORDER=3
NEXT_PUBLIC_JOURNAL_STATISTICS_REVIEWS_REQUESTED_ORDER=1
NEXT_PUBLIC_JOURNAL_STATISTICS_REVIEWS_RECEIVED_ORDER=2
NEXT_PUBLIC_JOURNAL_STATISTICS_MEDIAN_SUBMISSION_PUBLICATION_ORDER=3
NEXT_PUBLIC_JOURNAL_STATISTICS_MEDIAN_REVIEWS_NUMBER_ORDER=4

# ==============================================================================
# ANALYTICS (MATOMO)
# ==============================================================================
# Matomo site ID (0 to disable tracking, or specific ID for this journal)
# Note: MATOMO_DOMAIN is defined in .env as a common constant
NEXT_PUBLIC_MATOMO_SITEID=0

# ==============================================================================
# EPISCIENCES MANAGER
# ==============================================================================
# URL to the Episciences management interface
NEXT_PUBLIC_EPISCIENCES_MANAGER="https://manager-preprod.episciences.org"
